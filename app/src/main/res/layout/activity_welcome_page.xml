<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple"
    tools:context=".ui.activity.WelcomePage">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBaseline_toTopOf="parent">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="355dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_welcome_page"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="bottom"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/hello"
        android:textColor="@color/purple_dark"
        android:textSize="22dp" />


</FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:orientation="vertical"
>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/welcome_desc"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Email Address"
            android:textColorHint="@color/white"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/white"/>

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:backgroundTint="@color/white"/>

        <EditText
            android:id="@+id/editTextPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:hint="Password Again"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/buttonContinueWithGoogle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="Continue with Google"
            android:background="@drawable/button_create_account"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:drawableWidth="24dp"
            android:drawableHeight="24dp" />

        <Button
            android:id="@+id/buttonCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:text="Create Account"
            android:background="@drawable/button_create_account"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>